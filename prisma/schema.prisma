generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @map("_id")
  firstname     String
  lastname      String?
  username      String?
  faculty       String?
  educationForm String?
  course        String?
  studyGroup    String?
}

model EmployeeCache {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  date      DateTime
  employees Employee[]
}

model Employee {
  id              String         @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  key             String
  EmployeeCache   EmployeeCache? @relation(fields: [employeeCacheId], references: [id])
  employeeCacheId String?        @db.ObjectId
}
